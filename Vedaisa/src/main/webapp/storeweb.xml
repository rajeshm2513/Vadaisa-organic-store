<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- ✅ Oracle DataSource configuration (JNDI lookup name must match context.xml) -->
    <resource-ref>
        <description>Oracle DB Connection</description>
        <res-ref-name>jdbc/OracleDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- ✅ Store Delete Servlet -->
    <servlet>
        <servlet-name>DeleteStoreServlet</servlet-name>
        <servlet-class>project.DeleteStoreServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteStoreServlet</servlet-name>
        <url-pattern>/DeleteStore</url-pattern>
    </servlet-mapping>

    <!-- ✅ Store Register Servlet -->
    <servlet>
        <servlet-name>StoreRegisterServlet</servlet-name>
        <servlet-class>project.StoreRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StoreRegisterServlet</servlet-name>
        <url-pattern>/StoreRegisterServlet</url-pattern>
    </servlet-mapping>

    <!-- ✅ Store Login Servlet -->
    <servlet>
        <servlet-name>StoreLogin</servlet-name>
        <servlet-class>project.StoreLogin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StoreLogin</servlet-name>
        <url-pattern>/storelogin</url-pattern>
    </servlet-mapping>

</web-app>
